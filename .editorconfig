# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JS, JSON, HTML/MD, and YAML standard is 2 spaces
[*.{js,json,md,yml,yaml}]
indent_size = 2

[*.js]
max_line_length = 100

[*.bat]
end_of_line = crlf

[*.zs]
max_line_length = 145  # The comments are this long
